# Example workflow for adding mypy type checking to CI
# This file should be renamed to mypy.yml and placed in .github/workflows/
name: Type Check

on:
  push:
    branches: [main]
  pull_request:
    branches: [main]

jobs:
  mypy:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      
      - name: Set up Python
        uses: actions/setup-python@v4
        with:
          python-version: '3.11'
      
      - name: Install dependencies
        run: |
          python -m pip install --upgrade pip
          pip install mypy
          pip install -r requirements.txt
      
      - name: Run mypy
        run: |
          mypy entrypoint/entrypoint.py